{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules", "packages"]
    },
    "typeRoots": ["./typings"],
    "types": ["node", "jest"]
  },
  "include": ["packages"],
  "exclude": ["./node_modules"],
  "scripts": {
    "prebuild": "tsc"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  }
}
